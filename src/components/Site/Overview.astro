---
import { getFormats } from "../../lib/sanityClient";


import Section from "../Formats/Section.astro";
---

<nav id="overview">
  <h2>Overview</h2>


</nav>

<style>

  #open-overview {
  }

  #overview {
    width: calc(100vw - 2 * var(--padding));
    height: calc(100vh - var(--header-height) - 3 * var(--padding));
    background: white;
    position: fixed;
    top: calc(2 * var(--padding) + var(--header-height));
    z-index: 9;
    left: 50%;
    translate: -50% 10%;
    padding: var(--padding);
    border-radius: var(--border-radius);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    opacity: 0;
    pointer-events: none;
  }

  #overview.visible {
    translate: -50% 0;
    opacity: 1;
    pointer-events: all;
  }
</style>

<script>
  const openOverview = document.getElementById("open-overview");

  if (openOverview) {
    openOverview.addEventListener("click", function (e) {
      document.getElementById("overview")?.classList.toggle("visible");
    });
  }
</script>
</style>
